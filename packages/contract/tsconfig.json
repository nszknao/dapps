{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "isolatedModules": false,
    "outDir": "./dist",
    "noImplicitAny": false,
    "rootDirs": ["./scripts", "./tests", "./typechain"],
  },
  "exclude": ["dist", "node_modules"],
  "files": ["./hardhat.config.ts"],
  "include": ["./scripts", "./deploy", "./tasks", "./tests", "./typechain"]
}