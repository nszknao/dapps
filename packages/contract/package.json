{
  "name": "contract",
  "version": "1.0.0",
  "main": "dist/index",
  "author": "Naoto Nishizaka",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "yarn run clean && yarn build:sol",
    "build:sol": "yarn run compile",
    "clean": "yarn run clean:sol",
    "clean:sol": "hardhat clean",
    "test": "hardhat test",
    "compile": "hardhat compile --force",
    "node": "hardhat node --hostname 0.0.0.0",
    "deploy:local": "hardhat --network localhost deploy",
    "deploy:rinkeby": "hardhat --network rinkeby deploy",
    "verify:cmd": "hardhat verify",
    "verify": "yarn run verify:mainnet",
    "verify:mainnet": "hardhat verify --network mainnet",
    "verify:rinkeby": "hardhat verify --network rinkeby"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.6.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.6",
    "@nomiclabs/hardhat-etherscan": "3.0.3",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "@typechain/ethers-v5": "10.0.0",
    "@typechain/hardhat": "6.0.0",
    "@types/chai": "4.3.1",
    "@types/mocha": "9.1.1",
    "@types/node": "16.11.12",
    "chai": "4.3.6",
    "chai-as-promised": "7.1.1",
    "dotenv": "16.0.1",
    "ethereum-waffle": "3.4.4",
    "hardhat": "2.9.5",
    "hardhat-deploy": "0.11.4",
    "ts-node": "10.7.0",
    "typechain": "8.0.0",
    "typescript": "4.6.4"
  }
}
