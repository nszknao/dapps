{
  "name": "contract",
  "version": "1.0.0",
  "main": "dist/index",
  "author": "Naoto Nishizaka",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "yarn run clean && yarn build:sol",
    "build:sol": "yarn run compile",
    "clean": "yarn run clean:sol",
    "clean:sol": "hardhat clean",
    "test": "hardhat test",
    "compile": "hardhat compile --force",
    "node": "hardhat node --hostname 0.0.0.0",
    "deploy:local": "hardhat run --network localhost scripts/deploy.ts",
    "deploy:rinkeby": "hardhat run --network rinkeby scripts/deploy.ts",
    "verify:cmd": "hardhat verify",
    "rinkeby:verify": "yarn run verify:cmd --network rinkeby"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.6.0",
    "dotenv": "10.0.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.3",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@typechain/ethers-v5": "8.0.5",
    "@typechain/hardhat": "3.0.0",
    "@types/chai": "4.3.0",
    "@types/mocha": "9.0.0",
    "@types/node": "16.11.12",
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "ethereum-waffle": "3.4.0",
    "hardhat": "2.7.1",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.12.0",
    "typechain": "6.0.5",
    "typescript": "4.5.3"
  }
}
